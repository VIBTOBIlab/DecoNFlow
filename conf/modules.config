    }

    withName: BUILD{
        publishDir = [
            path: { "${params.outdir}/preprocessing/reference_samples_preprocessing/wgbstools/atlas" },
            mode: 'copy',
            pattern: "*.tsv",
            enabled: params.save_intermeds
        ]
    }

    withName: CONVERT_ATLAS{
        publishDir = [
            path: { "${params.outdir}/preprocessing/reference_samples_preprocessing/wgbstools/converted_atlas" },
            mode: 'copy',
            pattern: "*",
            enabled: params.save_intermeds
        ]
    }

    withName: INIT_GENOME{
        publishDir = [
            path: { "${params.outdir}/preprocessing/reference_samples_preprocessing/wgbstools/genome" },
            mode: 'copy',
            pattern: "*",
            enabled: params.save_intermeds
        ]
    }

    withName: SELECT_REGIONS{
        publishDir = [
            path: { "${params.outdir}/preprocessing/reference_samples_preprocessing/wgbstools/regions" },
            mode: 'copy',
            pattern: "*.bed",
            enabled: params.save_intermeds
        ]
    }

    withName: METDECODE_DECONV {
        publishDir = [
            path: { "${params.outdir}/deconvolution_results/reference_based/metdecode" },
            mode: 'copy',
            pattern: "*.csv",
            enabled: params.save_intermeds
        ]
    }

    withName: INTERSECT {
        publishDir = [
            path: { "${params.outdir}/deconvolution_results/reference_based/metdecode" },
            mode: 'copy',
            pattern: "*.csv",
            enabled: params.save_intermeds
        ]
    }
}
