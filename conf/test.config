/*
 * -------------------------------------------------
 *  Nextflow config file for running tests
 * -------------------------------------------------
 * Defines bundled input files and everything required
 * to run a fast and simple test. Use as follows:
 *   nextflow run main.nf -profile test,<docker/singularity> --outdir <OUTDIR>
 */

params {
    config_profile_name        = 'Test profile'
    config_profile_description = 'Minimal test dataset to check pipeline function'

    // Limit resources so that this can run on GitHub Actions
    max_cpus   = 2
    max_memory = 6.GB
    max_time   = 6.h

    // Input data
    input = "${projectDir}/assets/reference.csv"
    regions = "${projectDir}/assets/RRBS_regions20-200_chr.bed"
    outdir = "${projectDir}/results"
    test_set = "${projectDir}/assets/test.csv"
    ref_bams = "${projectDir}/assets/ref_bam.csv"
    test_bams = "${projectDir}/assets/test_bam.csv"
    groups_file = "${projectDir}/assets/groups.csv"
    DMRselection = 'limma'
    methyl_atlas = true
    min_cpgs = 0
    min_counts = 0
    refree_min_cpgs = 0
    refree_min_counts = 0
    adjp = 1
    delta = 0
    min_cpg_uxm = 0
}
