nextflow_pipeline {

    name "Test Workflow main.nf"
    script "main.nf"
    tag "cpu"

    test("Test scenario: all reference-based + DMRfinder") {

        when {
            params {
                // define parameters here. Example:
                outdir = "${outputDir}"
                DMRselection = 'DMRfinder'
                top = 50
                dmrfinder_pvalue = 1
                dmrfinder_qvalue = 1
                delta = 0
                meth_atlas = true
                celfie = true
                metdecode = true
                epidish = true
                houseman_eq = true
                houseman_ineq = true
                cibersort = true
                episcore = true
                uxm = true
                prmeth = true
            }
        }

        then {
            assertAll(
                { assert workflow.success },
                { assert snapshot(
                    // Number of tasks
                    workflow.trace.succeeded().size(),
                    path("$outputDir/deconvolution_results/combined_results.csv")
                ).match() }
            )
        }
    }
}
