nextflow_process {

    name "Test Process BAM2PAT"
    script "modules/wgbstools/bam2pat/main.nf"
    process "BAM2PAT"

    test("Should run without failures") {

        setup {
            run("INIT_GENOME") {
                script "modules/wgbstools/init_genome/main.nf"
                process {
                    """
                    input[0] = Channel.of(file(params.pipelines_testdata_base_path + '/resources/hg19_chr1_1M.fa'))
                    """
                }
            }
        }

        when {
            params {
                // define parameters here. Example:
                // outdir = "tests/results"
            }
            process {
                """
                // define inputs of the process here. Example:
                input[0] = Channel.of([
                    "SRR1045638",
                    "lung_1",
                    file(params.pipelines_testdata_base_path + 'bams/SRR1045638_chr1_1M.bam'),
                    file(params.pipelines_testdata_base_path + 'bams/SRR1045638_chr1_1M.bam.bai')]
                    )
                input[1] = true
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
        }

    }

}
