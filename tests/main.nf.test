nextflow_pipeline {

    name "Test Workflow main.nf"
    script "main.nf"

    test("-profile test (limma + meth_atlas)") {

        when {
            params {
                // define parameters here. Example:
                outdir = "${outputDir}"
                DMRselection = 'limma'
                meth_atlas = true
            }
        }

        then {
            assertAll(
                { assert workflow.success },
                { assert snapshot(
                    // Number of tasks
                    workflow.trace.succeeded().size()
                ).match() }
            )
        }
    }

